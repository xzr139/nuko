!!!
%html{ lang: locale}
  %head
    %meta{ charset: "utf-8" }
    %title= Settings.service.name

    = csrf_meta_tags
    = javascript_include_tag "i18n"
    = javascript_include_tag "translations"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag "bootstrap_and_overrides", media: "all"
    = stylesheet_link_tag "application"
  %body
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          = link_to Settings.service.name, root_path, class: "navbar-brand", id: 'service-name'
        #navbar-main.navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right
            - if signed_in?
              %li
                = link_to user_path(current_user) do
                  = current_user.nick_name
                  = profile_image(current_user, '35x35')
              %li
                .toggeles
                  .btn-group
                    %button.btn.btn-default.dropdown-toggle#on-nav{"data-toggle" => "dropdown", type: "button"}
                      %span.caret
                    %ul.dropdown-menu{:role => "menu"}
                      %li
                        = link_to t("users.edit.edit_profile"), edit_user_path(current_user)
                      %li
                        = link_to t("users.change_interface"), edit_user_path(current_user)
                      %li
                        = link_to t("users.sign_out"), auth_sign_out_path, id: 'sign-out', method: :delete
            - unless signed_in?
              %li
                = link_to t("users.sign_in"), "/auth/facebook"
    .container
      %br
      %br
      %br
      %br
      = bootstrap_flash
      = yield
  = render 'layouts/footer'

  :javascript
    $(document).ready(function () {
      if (window.location.href.indexOf('#_=_') > 0) {
      window.location = window.location.href.replace(/#.*/, '');
    }});
