.form
  = render "form"

- @feeds.each do |feed|
  .post-block
    .post-detail.clearfix
      .feed-profile-image.pull-left
        = image_tag 'https://fbcdn-profile-a.akamaihd.net/hprofile-ak-xpa1/v/t1.0-1/c31.31.391.391/1157476_450075755090354_257513011_n.jpg?oh=203779904cfdbda3fbd1ab32506015ee&oe=547294D9&__gda__=1417793524_599ab9647e3bc7ecda32e2e8f0f2841a', size: '47x47'
      .post-information
        .title
          = feed.title
        .time-ago-and-edit
          = time_ago_in_words(feed.created_at)
          = link_to 'Edit', edit_feed_path(feed)
    .post-content
      = truncate feed.content, length: 100, omission: '・・・'
      = link_to feed_path(feed) do
        - if feed.content.length > 100
          .see-all-text
            = t('users.index.see_all_this_post')
#navigation
  = paginate @feeds
