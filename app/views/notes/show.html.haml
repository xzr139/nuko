.post-block
  .post-detail.clearfix
    .note-profile-image.pull-left
      = profile_image(@note.user, '47x47')
    .post-information
      .title
        = @note.title
      .time-ago-and-edit
        = time_ago_in_words(@note.created_at)
        = link_to "Edit", edit_note_path(@note)
  .post-content
    = truncate auto_link(simple_format(@note.content)), length: 100

= link_to "Back", notes_path
