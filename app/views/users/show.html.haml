.user-profile
  .profile-image
    = profile_image(@user, "100x100")
  .profile-company
    = t("common.belonging_to", company: @user.company)
.well
  .profile-bio= auto_link(simple_format(@user.bio), html: { target: "_blank" })

.navbar.navbar-default
  .navbar-collapse.collapse.navbar-inverse-collapse
    %ul.nav.navbar-nav
      %li
        %a= @user.full_name
      %li
        %a= t("common.number_of_friends")
      %li
        %a= t("common.all_posts")
    %ul.nav.navbar-nav.navbar-right
      %li
        - if current_user?(params[:id])
          .toggeles
            .btn-group
              %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
                Action
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li
                  = link_to t("users.edit.edit_profile"), edit_user_path
                %li
                  = link_to t("users.change_interface"), edit_user_path
