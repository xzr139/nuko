.user-profile
  .profile-image
    = profile_image(@user, "100x100")
  - if @user.show_company
    .profile-company
      = t("common.belonging_to", company: @user.company)
  .profile-bio
    = auto_link(simple_format(@user.bio), html: { target: "_blank" })
  - unless @user == current_user
    .follow-bt{ ng_controller: "FollowersCtrl" }
      - folloed_flag = if current_user.followers.exists?(user_id: current_user.id)
        - current_user.followers.find_by(user_id: current_user.id).followed
      = link_to "javascript:void(0)", ng_click: "#{folloed_flag ? 'un' : ''}follow(#{@user.id})", id: "follow-bt", class: "#{".follow-bt" if folloed_flag}" do
        = t("followers.button")

.navbar.navbar-default
  .navbar-collapse.collapse.navbar-inverse-collapse#user
    %ul.nav.navbar-nav
      %li
        %a.column= @user.full_name
      %li
        = link_to t("common.all_posts"), user_path(@user)
      %li
        = link_to t("users.stocked_notes"), stocks_user_path(id: @user)
      %li
        %a.column= t("users.tags")
      - @ranking.each do |name, count|
        %li
          = link_to name, tag_user_path(id: @user.id, name: name)
    %ul.nav.navbar-nav.navbar-right
      %li
        - if current_user?(params[:id])
          .toggeles
            .btn-group
              %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li
                  = link_to t("users.edit.edit_profile"), edit_user_path
                %li
                  = link_to t("users.change_interface"), edit_user_path

.margin#user
= render 'common/notes'
